<%= render partial: "helpers/header" %>

<table class="playlist-list">
  <tbody>
    <% @lists.each do |list| %>
          <tr>
            <td>
              <a class="page-nav" href="/playlists/<%= list.id %>"><%= list.name %></a>
            </td>
            <td>
              <%= form_tag("/list/#{list.id}", method: "delete") do %>
                <%= submit_tag("DELETE") %>
                <% end %>
            </td> 
          </tr>
    <% end %>
  </tbody>
</table>

<h3>Add a New Playlist:</h3>

<%= render partial: "playlist_form" %>
